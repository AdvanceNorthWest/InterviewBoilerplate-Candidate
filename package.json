{
  "name": "interview-task-manager",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:client\"",
    "dev:server": "cd server && node --watch server.js",
    "dev:client": "cd client && npx vite --port 3000",
    "setup": "npm install && concurrently \"npm run install:client\" \"npm run install:server\"",
    "install:client": "cd client && npm install",
    "install:server": "cd server && npm install"

  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}
